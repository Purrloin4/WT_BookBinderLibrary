{% extends 'base.html.twig' %}

{% block title %}Hello FriendshipController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h3>Pending friend requests</h3>
    <ul>
        {% for f in pending %}
            <li>{{ f.receiver.displayName|e }}</li>
        {% endfor %}
    </ul>

    <h3>Incoming friend requests</h3>
    <ul>
        {% for f in incoming %}
            <li>{{ f.sender.displayName|e }}</li>
        {% endfor %}
    </ul>
    <h3>Friend list</h3>
    <ul>
        {% for f in friends %}
            <li>{{ f.displayName|e }}</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
