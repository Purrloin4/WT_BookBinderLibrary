<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Register{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    <link rel="icon" href="{{ asset('images/bookbinder_icon.png') }}">

    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/login_and_register.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/register.css') }}" />
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    {% endblock %}
</head>

{% block body %}
    <section class="back"></section>
    <section class="register_info">
        <section class="register_box">
            {{ form_start(registrationForm) }}
            <div class="row">
                <h1>Register</h1>
                <input
                        name="{{ field_name(registrationForm.email) }}"
                        value="{{ field_value(registrationForm.email) }}"
                        placeholder="{{ field_label(registrationForm.email) }}"
                />
                <input
                        name="{{ field_name(registrationForm.displayName) }}"
                        value="{{ field_value(registrationForm.displayName) }}"
                        placeholder="{{ field_label(registrationForm.displayName) }}"
                />
                <input
                        name="{{ field_name(registrationForm.plainPassword) }}"
                        value="{{ field_value(registrationForm.plainPassword) }}"
                        placeholder="{{ field_label(registrationForm.plainPassword) }}"
                        type="password"
                />
                {{ form_row(registrationForm.agreeTerms) }}
                <br>
                <button type="submit" class="btn">Register</button>
            </div>
            {{ form_end(registrationForm) }}
        </section>
    </section>
{% endblock %}
