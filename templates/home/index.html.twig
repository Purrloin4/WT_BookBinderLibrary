{% extends 'home/base.html.twig' %}

{% block content %}
    <div class="book-slide">
        <div class="book js-flickity" data-flickity-options='{ "wrapAround": true }'>
            <div class="book-cell">
            {% for book in sliding_books %}
            <div class="book-cell" data-isbn={{ book.isbn }}>
                <div class="book-img">
                    <img src="https://images-na.ssl-images-amazon.com/images/I/81WcnNQ-TBL.jpg" alt="" class="book-photo">
                </div>
                <div class="book-content">
                    <div class="book-title">Book Title</div>
                    <div class="book-author">by <span class="name">Name of the Author</span></div>
                    {# FIXME: implement book description page #}
                    <a href="#"><div class="book-see" >See The Book</div></a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="main-wrapper">
        <div class="books-of">
            <div class="week year">
                <div class="author-title">Books of the year</div>
                {% for book in year_books %}
                <div class="year-book" data-isbn="{{ book.isbn }}">
                    <img src="https://images-na.ssl-images-amazon.com/images/I/A1kNdYXw0GL.jpg" alt="" class="year-book-img">
                    <div class="year-book-content">
                        <div class="year-book-name">Book Title Placeholder</div>
                        <div class="year-book-author">by <span>Author's Name Placeholder</span></div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="overlay"></div>
        </div>
        <div class="popular-books">
            <div class="main-menu">
                <div class="genre">Popular Books</div>
            </div>
            <div class="book-cards">
                {% for book in popular_books %}
                <div class="book-card" data-isbn="{{ book.isbn }}">
                    <div class="content-wrapper">
                        <img src="https://imagesvc.meredithcorp.io/v3/mm/image?url=https%3A%2F%2Fstatic.onecms.io%2Fwp-content%2Fuploads%2Fsites%2F6%2F2019%2F07%2Fchances-are-1-2000.jpg&q=85" alt="" class="book-card-img">
                        <div class="card-content">
                            <div class="book-name">Changes Are</div>
                            <div class="book-by">by <span>Richard Russo</span></div>
                        </div>
                    </div>
                    {# FIXME: Show book followers briefly #}
                    {#
                    <div class="likes">
                        <div class="like-profile">
                            <img src="" alt="" class="like-img">
                        </div>
                        <div class="like-profile">
                            <img src="" alt="" class="like-img">
                        </div>
                        <div class="like-profile">
                            <img src="" alt="" class="like-img">
                        </div>
                        <div class="like-name"><span class="name">Name placeholder</span> and <span class="suj>2 other friends</span> like this</div>
                    </div>
                    #}
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
