{% extends 'base.html.twig' %}

{% block title %}BookBinder{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" />
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/flickity/1.0.0/flickity.css'>
    <link rel="stylesheet" href="{{ asset('css/home.css') }}"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src='https://cdnjs.cloudflare.com/ajax/libs/flickity/1.0.0/flickity.pkgd.js'></script>
{% endblock %}

{% block body %}
<div class="book-store">
    <div class="header">
        <div class="browse">
            <div class="search-bar">
                <input type="text" id="search" placeholder="Search Book" />
            </div>
        </div>
        <div class="header-title" onclick="window.location.href='{{ path('app_home') }}'">Book<span>Binder</span></div>
        <div class="profile">
            {% if app.user %}
                <div class="user-profile">
                    <img onclick="window.location.href='{{ path('app_register') }}'" src="https://randomuser.me/api/portraits/women/63.jpg" alt="" class="user-img">
                </div>
            {% else %}
                <div class="login_register_buttons">
                    <a href="{{ path('app_login') }}">
                        <button class="login_button" type="button">Login</button>
                    </a>
                    <a href="{{ path('app_register') }}">
                        <button class="register_button" type="button">Register</button>
                    </a>

                </div>
            {% endif %}
            <div class="profile-menu">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-menu">
                    <path d="M3 12h18M3 6h18M3 18h18" /></svg>
                Menu
            </div>
        </div>
    </div>

    {% block content %}
    <main>
        <div class="book-slide">
            <div class="book js-flickity" data-flickity-options='{ "wrapAround": true }'>
                {% for book in sliding_books %}
                <div class="book-cell" data-isbn={{ book.isbn }}>
                    <div class="book-img">
                        <img src="data:image/gif;base64,R0lGODlhAQABAIAAAMLCwgAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="book cover placeholder" class="book-photo">
                    </div>
                    <div class="book-content">
                        <div class="book-title">Book Title</div>
                        <div class="book-author">by <span class="name">Name of the Author</span></div>
                        {# FIXME: implement book description page #}
                        <a href="#"><div class="book-see" >See The Book</div></a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        <div class="main-wrapper">
            <div class="books-of">
                <div class="week year">
                    <div class="author-title">Books of the year</div>
                    {% for book in year_books %}
                    <div class="year-book" data-isbn="{{ book.isbn }}">
                        <img src="data:image/gif;base64,R0lGODlhAQABAIAAAMLCwgAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="book cover placeholder" class="year-book-img">
                        <div class="year-book-content">
                            <div class="year-book-name">Book Title Placeholder</div>
                            <div class="year-book-author">by <span>Author's Name Placeholder</span></div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <div class="overlay"></div>
            </div>
            <div class="popular-books">
                <div class="main-menu">
                    <div class="genre">Popular Books</div>
                </div>
                <div class="book-cards">
                    {% for book in popular_books %}
                    <div class="book-card" data-isbn="{{ book.isbn }}">
                        <div class="content-wrapper">
                            <img src="data:image/gif;base64,R0lGODlhAQABAIAAAMLCwgAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="book cover placeholder" class="book-card-img">
                            <div class="card-content">
                                <div class="book-name">Changes Are</div>
                                <div class="book-by">by <span>Richard Russo</span></div>
                            </div>
                        </div>
                        {# FIXME: Show book followers briefly #}
                        {#
                        <div class="likes">
                            <div class="like-profile">
                                <img src="" alt="" class="like-img">
                            </div>
                            <div class="like-profile">
                                <img src="" alt="" class="like-img">
                            </div>
                            <div class="like-profile">
                                <img src="" alt="" class="like-img">
                            </div>
                            <div class="like-name"><span class="name">Name placeholder</span> and <span class="suj>2 other friends</span> like this</div>
                        </div>
                        #}
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>
    {% endblock %}
</div>

    <script src="{{ asset('js/home.js') }}"></script>
{% endblock %}



