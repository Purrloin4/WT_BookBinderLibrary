<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Base{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link rel="icon" href="{{ asset('images/bookbinder_icon.png') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" />
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
        {% endblock %}
    </head>

    <body class="book-store">
        {% block body %}
            <header>
                <label for="search"></label>
                <input class="browse" type="text" id="search" placeholder="Search Book" />
                <h1 class="header-title" onclick="window.location.href='{{ path('app_home') }}'">Book<span>Binder</span></h1>
                <div class="profile">
                    {% if app.user %}
                        <div class="user-profile">
                            {# TODO: Let the link below point to the user page (once it's made) #}
                            {# TODO: Replace the hardcoded image by the user's profile image #}
                            <img onclick="window.location.href='{{ path('app_register') }}'" src="https://randomuser.me/api/portraits/women/63.jpg" alt="" class="user-img">
                        </div>
                    {% else %}
                        <div class="login_register_buttons">
                            <a href="{{ path('app_login') }}">
                                <button class="login_button" type="button">Login</button>
                            </a>
                            <a href="{{ path('app_register') }}">
                                <button class="register_button" type="button">Register</button>
                            </a>

                        </div>
                    {% endif %}
                    <div class="profile-menu">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-menu">
                            <path d="M3 12h18M3 6h18M3 18h18" /></svg>
                        Menu
                    </div>
                </div>
            </header>
        {% endblock %}
        {% block content %}{% endblock %}
    </body>



</html>
